{
  "type": "object",
  "required": ["openapi", "info", "paths"],
  "properties": {
    "openapi": {
      "type": "string",
      "pattern": "^(3\\.0\\.[0-9])$"
    },
    "info": {
      "type": "object",
      "required": ["title", "version"],
      "properties": {
        "title": "string",
        "description": "string",
        "termsOfService": "string",
        "contact": {
          "type": "object",
          "requiredAnyOf": ["name", "url", "email", "x-github"],
          "properties": {
            "name": "string",
            "url": "string",
            "email": "string",
            "x-github": "string"
          }
        },
        "license": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": "string",
            "url": "string"
          }
        },
        "version": {
          "type": "string",
          "pattern": "^([0-9]+\\.[0-9]+\\.[0-9]+)$"
        },
        "x-logo": {
          "type": "object",
          "properties": {
            "url": "string",
            "data": "string",
            "backgroundColor": "string",
            "altText": "string"
          }
        }
      }
    },
    "servers": {
      "type": "array",
      "of": {
        "type": "object",
        "required": ["url"],
        "properties": {
          "url": "string",
          "description": "string"
        }
      },
      "minItems": 1,
      "uniqueItems": ["url"]
    },
    "paths": {
      "type": "object",
      "patternProperties": {
        "^(\\/[a-zA-Z0-9/_~-]+)$": {
          "type": "object",
          "requiredPattern": ["^(get|post|put|patch|delete|options|head)$", "i"],
          "properties": {
            "summary": "string",
            "description": "string",
            "servers": {
              "type": "array",
              "of": {
                "type": "object",
                "required": ["url"],
                "properties": {
                  "url": "string",
                  "description": "string"
                }
              },
              "minItems": 1,
              "uniqueItems": ["url"]
            }
          },
          "patternProperties": {
            "^(get|post|put|patch|delete|options|head)$": {
              "type": "object",
              "required": ["responses"],
              "properties": {
                "tags": {
                  "type": "array",
                  "of": "string",
                  "minItems": 1,
                  "uniqueItems": true
                },
                "summary": "string",
                "description": "string",
                "operationId": "string",
                "deprecated": "boolean",
                "parameters": {
                  "type": "array",
                  "of": {
                    "type": "object",
                    "required": ["name", "in"],
                    "properties": {
                      "name": "string",
                      "in": {
                        "type": "string",
                        "enum": ["query", "header", "path", "cookie"]
                      },
                      "description": "string",
                      "required": ["boolean", false],
                      "deprecated": ["boolean", false],
                      "explode": ["boolean", false],
                      "schema": "schema"
                    }
                  },
                  "minItems": 1,
                  "uniqueItems": ["name", "in"]
                },
                "requestBody": {
                  "type": "object",
                  "required": ["content"],
                  "properties": {
                    "description": "string",
                    "content": {
                      "type": "object",
                      "patternProperties": {
                        "^([a-zA-Z0-9+/_-]+)$": {
                          "type": "object",
                          "properties": {
                            "schema": "schema",
                            "example": "any"
                          }
                        }
                      }
                    },
                    "required": "boolean"
                  }
                },
                "responses": {
                  "type": "object",
                  "patternProperties": {
                    "^([1-5]([0-9]{2}|[XX]{2}|[xx]{2}))$": {
                      "type": "object",
                      "required": ["description"],
                      "properties": {
                        "description": "string",
                        "headers": {
                          "type": "object",
                          "patternProperties": {
                            "^([a-zA-Z0-9_-]+)$": {
                              "type": "object",
                              "properties": {
                                "description": "string",
                                "required": "boolean",
                                "deprecated": "boolean",
                                "explode": "boolean",
                                "schema": "schema"
                              }
                            }
                          }
                        },
                        "content": {
                          "type": "object",
                          "patternProperties": {
                            "^([a-zA-Z0-9+/_-]+)$": {
                              "type": "object",
                              "properties": {
                                "schema": "schema",
                                "example": "any"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "servers": {
                  "type": "array",
                  "of": {
                    "type": "object",
                    "required": ["url"],
                    "properties": {
                      "url": "string",
                      "description": "string"
                    }
                  },
                  "minItems": 1,
                  "uniqueItems": ["url"]
                }
              }
            }
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "of": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^([a-zA-Z0-9./_-]+)$"
          },
          "description": "string",
          "x-title": "string",
          "x-tagGroup": "string"
        }
      },
      "minItems": 1,
      "uniqueItems": ["name"]
    },
    "x-tagGroups": {
      "type": "array",
      "of": {
        "type": "object",
        "required": ["name", "tags"],
        "properties": {
          "name": "string",
          "title": "string",
          "description": "string",
          "tags": {
            "type": "array",
            "of": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string",
                  "pattern": "^([a-zA-Z0-9./_-]+)$"
                },
                "description": "string",
                "x-title": "string"
              }
            },
            "minItems": 1,
            "uniqueItems": ["name"]
          }
        }
      },
      "minItems": 1,
      "uniqueItems": ["name"]
    },
    "x-menuRoot": {
      "type": "object",
      "properties": {
        "title": "string"
      }
    }
  }
}
